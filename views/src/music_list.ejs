<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Moodify - 음악 리스트</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../frame/header') %>

  <div class="music-list-page">
    <!-- 햄버거 메뉴 버튼 -->
    <button class="hamburger-menu" id="hamburgerBtn">
      <i class="fas fa-bars"></i>
    </button>

    <!-- 메인 컨테이너 -->
    <div class="music-list-container">
      
      <!-- 왼쪽: 재생 카드 (고정) -->
      <div class="player-section">
        <div class="player-card-list">
          <!-- 앨범 아트 -->
          <div class="album-art">
            <i class="fas fa-music"></i>
          </div>

          <!-- 노래 정보 -->
          <div class="song-info-list">
            <h2 class="song-title-list" id="songTitleList">노래 제목</h2>
            <p class="song-artist-list" id="songArtistList">가수명</p>
          </div>

          <!-- 재생 컨트롤 -->
          <div class="player-controls-list">
            <button class="control-btn-list prev-btn-list" id="prevBtnList">
              <i class="fas fa-step-backward"></i>
            </button>
            <button class="control-btn-list play-btn-list" id="playBtnList">
              <i class="fas fa-play"></i>
            </button>
            <button class="control-btn-list next-btn-list" id="nextBtnList">
              <i class="fas fa-step-forward"></i>
            </button>
          </div>

          <!-- 재생바 -->
          <div class="progress-section-list">
            <span class="time-text-list" id="currentTimeList">0:00</span>
            <div class="progress-wrapper-list">
              <input 
                type="range" 
                class="progress-slider-list" 
                id="progressSliderList"
                min="0" 
                max="100" 
                value="0"
              >
              <div class="progress-fill-list" id="progressFillList"></div>
            </div>
            <span class="time-text-list" id="totalTimeList">0:00</span>
          </div>
        </div>
      </div>

      <!-- 오른쪽: 음악 리스트 -->
      <div class="list-section" id="listSection">
        <div class="list-scroll">
          <!-- 음악 아이템 1 -->
          <div class="music-item" data-index="0">
            <div class="music-thumbnail">
              <i class="fas fa-music"></i>
            </div>
            <div class="music-details">
              <h3 class="music-title">노래 제목 1</h3>
              <p class="music-artist">가수명</p>
            </div>
            <div class="music-actions">
              <button class="play-item-btn" data-index="0">
                <i class="fas fa-play"></i>
              </button>
              <button class="add-item-btn" data-index="0">
                <i class="fas fa-plus-circle"></i>
              </button>
            </div>
          </div>

          <!-- 음악 아이템 2 -->
          <div class="music-item" data-index="1">
            <div class="music-thumbnail">
              <i class="fas fa-music"></i>
            </div>
            <div class="music-details">
              <h3 class="music-title">노래 제목 2</h3>
              <p class="music-artist">가수명</p>
            </div>
            <div class="music-actions">
              <button class="play-item-btn" data-index="1">
                <i class="fas fa-play"></i>
              </button>
              <button class="add-item-btn" data-index="1">
                <i class="fas fa-plus-circle"></i>
              </button>
            </div>
          </div>

          <!-- 음악 아이템 3 -->
          <div class="music-item" data-index="2">
            <div class="music-thumbnail">
              <i class="fas fa-music"></i>
            </div>
            <div class="music-details">
              <h3 class="music-title">노래 제목 3</h3>
              <p class="music-artist">가수명</p>
            </div>
            <div class="music-actions">
              <button class="play-item-btn" data-index="2">
                <i class="fas fa-play"></i>
              </button>
              <button class="add-item-btn" data-index="2">
                <i class="fas fa-plus-circle"></i>
              </button>
            </div>
          </div>

          <!-- 음악 아이템 4 -->
          <div class="music-item" data-index="3">
            <div class="music-thumbnail">
              <i class="fas fa-music"></i>
            </div>
            <div class="music-details">
              <h3 class="music-title">노래 제목 4</h3>
              <p class="music-artist">가수명</p>
            </div>
            <div class="music-actions">
              <button class="play-item-btn" data-index="3">
                <i class="fas fa-play"></i>
              </button>
              <button class="add-item-btn" data-index="3">
                <i class="fas fa-plus-circle"></i>
              </button>
            </div>
          </div>

          <!-- 음악 아이템 5 -->
          <div class="music-item" data-index="4">
            <div class="music-thumbnail">
              <i class="fas fa-music"></i>
            </div>
            <div class="music-details">
              <h3 class="music-title">노래 제목 5</h3>
              <p class="music-artist">가수명</p>
            </div>
            <div class="music-actions">
              <button class="play-item-btn" data-index="4">
                <i class="fas fa-play"></i>
              </button>
              <button class="add-item-btn" data-index="4">
                <i class="fas fa-plus-circle"></i>
              </button>
            </div>
          </div>

          <!-- 음악 아이템 6 -->
          <div class="music-item" data-index="5">
            <div class="music-thumbnail">
              <i class="fas fa-music"></i>
            </div>
            <div class="music-details">
              <h3 class="music-title">노래 제목 6</h3>
              <p class="music-artist">가수명</p>
            </div>
            <div class="music-actions">
              <button class="play-item-btn" data-index="5">
                <i class="fas fa-play"></i>
              </button>
              <button class="add-item-btn" data-index="5">
                <i class="fas fa-plus-circle"></i>
              </button>
            </div>
          </div>

          <!-- 음악 아이템 7 -->
          <div class="music-item" data-index="6">
            <div class="music-thumbnail">
              <i class="fas fa-music"></i>
            </div>
            <div class="music-details">
              <h3 class="music-title">노래 제목 7</h3>
              <p class="music-artist">가수명</p>
            </div>
            <div class="music-actions">
              <button class="play-item-btn" data-index="6">
                <i class="fas fa-play"></i>
              </button>
              <button class="add-item-btn" data-index="6">
                <i class="fas fa-plus-circle"></i>
              </button>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>

  <!-- 노래 데이터 -->
  <div id="songData" style="display: none;">
    <div class="song-item" data-title="행복한 노래 1" data-artist="아티스트 A" data-duration="180"></div>
    <div class="song-item" data-title="사랑 노래 2" data-artist="아티스트 B" data-duration="210"></div>
    <div class="song-item" data-title="슬픈 노래 3" data-artist="아티스트 C" data-duration="195"></div>
    <div class="song-item" data-title="화난 노래 4" data-artist="아티스트 D" data-duration="225"></div>
    <div class="song-item" data-title="신나는 노래 5" data-artist="아티스트 E" data-duration="200"></div>
    <div class="song-item" data-title="우울한 노래 6" data-artist="아티스트 F" data-duration="215"></div>
    <div class="song-item" data-title="평온한 노래 7" data-artist="아티스트 G" data-duration="190"></div>
  </div>

  <script src="/js/music_list.js"></script>
</body>
</html>
