<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Moodify - 내 정보 수정</title>
  <link rel="stylesheet" href="/css/style_mypage.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <%- include('../frame/header_mypage') %>

  <div class="info-container">
    <div class="info-card">
      <h2 class="info-title">내 정보 수정</h2>
      
      <form class="info-form" id="infoForm">
        <!-- 닉네임 -->
        <div class="input-group">
          <input 
            type="text" 
            class="info-input" 
            id="nickname"
            placeholder="닉네임"
            value="닉네임"
          >
        </div>

        <!-- 아이디 (읽기 전용) -->
        <div class="input-group">
          <input 
            type="text" 
            class="info-input readonly" 
            id="userId"
            placeholder="아이디"
            value="아이디"
            readonly
          >
        </div>

        <!-- 비밀번호 -->
        <div class="input-group">
          <input 
            type="password" 
            class="info-input" 
            id="password"
            placeholder="비밀번호"
          >
        </div>

        <!-- 비밀번호 확인 -->
        <div class="input-group">
          <input 
            type="password" 
            class="info-input" 
            id="passwordConfirm"
            placeholder="비밀번호 확인"
          >
        </div>

        <!-- 수정하기 버튼 -->
        <button type="submit" class="info-submit-btn">수정하기</button>
      </form>
    </div>
  </div>

  <script>
    // 폼 제출 처리
    document.getElementById('infoForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const password = document.getElementById('password').value;
      const passwordConfirm = document.getElementById('passwordConfirm').value;
      
      // 비밀번호 확인
      if (password && password !== passwordConfirm) {
        alert('비밀번호가 일치하지 않습니다.');
        return;
      }
      
      // 여기에 서버로 전송하는 코드 추가
      alert('정보가 수정되었습니다.');
    });
  </script>
</body>
</html>
